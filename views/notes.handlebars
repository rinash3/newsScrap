<div class="container">

    <div class="jumbotron">
        {{#each Article}}
        <h2> "{{this.title}}" </h2>
        <h4><a href="https://www.nhl.com/oilers{{this.link}}" target="_blank"> {{this.link}}</a></h4>
        <hr>
        <button type="button" data-id="{{this._id}}" class="btn btn-warning" id="add-note" data-toggle="modal"
            data-target="#noteModal">Add Note</button>
        <a href="/"> <button type="button" class="btn btn-primary save-article">Back to Articles</button> </a>
    </div>

    {{/each}}
    <br>
    {{#each Article}}
    {{#each this.note}}
    <div class="well">
        <p>{{this.note}}</p>

        <form method="DELETE" action="/delete/{{this.id}}">
            <a href="/delete"> <button class="btn btn-danger btn-sm" id="note-delete">Delete Note</button></a>
        </form>

    </div>
    {{/each}} {{/each}}
</div>



<!-- Modal -->

{{#each Article}}
<div id="noteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Note Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Add your note.</h4>
            </div>
            <div class="modal-body">
                <p>Add a Note on this article. This article ID is {{this._id}}. This headline is "{{this.title}}".</p>
                <form method="POST" action="/notes/{{this._id}}">
                    <div class="form-group">
                        <label>Note:</label>
                        <input type="note" class="form-control" id="note" name="note" aria-describedby="note"
                            placeholder="Ex: This is great">
                    </div>
                    <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-default btn-primary add-note">Submit Your Note</button>
                </form>

            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
{{/each}}

</ul>
<br><br>
</div>
